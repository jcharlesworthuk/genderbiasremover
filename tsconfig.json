{
    "compilerOptions": {
        "lib": [
            "dom",
            "esnext"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "target": "esnext",
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}